<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">

    <link rel="stylesheet" href="userMainPages.css">

    <title>Doctor Main Page</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg sticky-top" style="background-color:  #f2f2f2;">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="carepoint3.jpg" alt="">
                CARE POINT</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item px-5">
                        <a class="nav-link active" aria-current="page" href="#">Home</a>
                    </li>
                    <li class="nav-item px-5">
                        <a class="nav-link" href="#">Clinic Appointments</a>
                    </li>
                    <li class="nav-item px-5">
                        <a class="nav-link" href="#">Home Appointments</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>
    <div class="content">
        <div class="text">
            <h1>Hi Dr. <%= doctorName %>
            </h1>
        </div>
        <div class="image"> <img src="doctor.avif" alt="">
        </div>

    </div>
    <div class="section">
        <h1>My appointments</h1>

        <% if(patients[0]){ %>
            <div class="formContent">
                <div class="row">
                    <% patients.forEach(element=> { %>
                        <div class="col-lg-4 col-md-6 col-sm-12">
                            <div class="card">
                                <div class="card-body">


                                    <div class="container">
                                        <%= element.userName%> <br>
                                            <%= element.date%> <br>
                                                <%= element.slot%> <br>
                                                    <%= element.address%> <br>
                                                        <% if(element.status==="Pending" ){ %>
                                                            <p> Status: <%= element.status%>
                                                            </p> <br>
                                                            <form action="/approveAppointment" method="post">
                                                                <button type="submit"
                                                                    class="btn btn-success">Approve</button>
                                                                <input type="text" name="doctorName"
                                                                    value="<%= element.doctorName%>" hidden id="">
                                                                <input type="text" name="userName"
                                                                    value="<%= element.userName%>" hidden id="">
                                                                <input type="text" name="date"
                                                                    value="<%= element.date%>" hidden id="">
                                                                <input type="text" name="slot"
                                                                    value="<%= element.slot%>" hidden id="">
                                                            </form>
                                                            <% }else if(element.status==="Approved" ){ %>
                                                                <p> Status: <%= element.status%>
                                                                </p>
                                                                <form action="/completedAppointment" method="post">
                                                                    <button type="submit"
                                                                        class="btn btn-success">Complete</button>
                                                                    <br><br>
                                                                    <input type="text" name="doctorName"
                                                                        value="<%= element.doctorName%>" hidden id="">
                                                                    <input type="text" name="userName"
                                                                        value="<%= element.userName%>" hidden id="">
                                                                    <input type="text" name="date"
                                                                        value="<%= element.date%>" hidden id="">
                                                                    <input type="text" name="slot"
                                                                        value="<%= element.slot%>" hidden id="">
                                                                </form>
                                                                <% }else{ %>
                                                                    <p> Status: <%= element.status%>
                                                                    </p>
                                                                    <% } %>

                                                                        <form action="/userHistory" method="post">
                                                                            <button type="submit"
                                                                                class="btn btn-success">Get Patient
                                                                                History</button>
                                                                            <input type="text" name="doctorName"
                                                                                value="<%= element.doctorName%>" hidden
                                                                                id="">
                                                                            <input type="text" name="userName"
                                                                                value="<%= element.userName%>" hidden
                                                                                id="">
                                                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                </div>
            </div>
            <% } else{ %>

                <div class="alert alert-danger" role="alert">Currently, you have no appointments.</div>
                <% } %>
    </div>
    <div class="section">
        <h1>Update Schedule</h1>
        <form action="/updateSchedule" method="post">
            <input type="date" name="date" id=""> <br> <br>
            Slot 1 :
            <select name="slot1" id="">
                <option value="Free">Free</option>
                <option value="Busy">Busy</option>
            </select> <br> <br>
            Slot 2 :
            <select name="slot2" id="">
                <option value="Free">Free</option>
                <option value="Busy">Busy</option>
            </select> <br> <br>
            Slot 3 :
            <select name="slot3" id="">
                <option value="Free">Free</option>
                <option value="Busy">Busy</option>
            </select> <br> <br>
            <input type="text" name="doctorName" value="<%= doctorName %>" id="" hidden>
            <button class="btn btn-success" type="submit">Update Schedule </button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N"
        crossorigin="anonymous"></script>
</body>

</html>