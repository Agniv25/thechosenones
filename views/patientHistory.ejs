<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">

    <link rel="stylesheet" href="userMainPages.css">

    <title>Patient History</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg sticky-top" style="background-color:  #f2f2f2;">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="carepoint3.jpg" alt="">
                CARE POINT</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item px-5">
                        <a class="nav-link active" aria-current="page" href="#">Home</a>
                    </li>
                    <li class="nav-item px-5">
                        <a class="nav-link" href="#">Clinic Appointments</a>
                    </li>
                    <li class="nav-item px-5">
                        <a class="nav-link" href="#">Home Appointments</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>
    <div class="content">
        <div class="text">
            <h1>Hi Dr. <%= doctorName %>
            </h1>
        </div>
        <div class="image"> <img src="doctor.avif" alt="">
        </div>

    </div>
    <div class="section">
        <div class="formContent">
            <div class="row">
                <% doctors.forEach(element=> { %>
                    <div class="col-lg-4 col-md-6 col-sm-12">
                        <div class="card">
                            <div class="card-body">

                                <div class="container">
                                    <%= element.userName%> <br>
                                    <%= element.address%> <br>
                                        <%= element.status%>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }); %>
            </div>
        </div>
    </div>
</body>