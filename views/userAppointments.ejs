<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">

    <link rel="stylesheet" href="userMainPages.css">
    <link href="assets/img/favicon.png" rel="icon">
    <link href="assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link
        href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i"
        rel="stylesheet">

    <!-- Vendor CSS, Font-Awesome, Bootstrap Files -->
    <link href="assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
    <link href="assets/vendor/animate.css/animate.min.css" rel="stylesheet">
    <link href="assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="assets/css/style.css" rel="stylesheet">
    <title>User Main Page</title>
</head>

</head>

<body>
    <header id="header" class="fixed-top">
        <div class="container d-flex align-items-center">

            <h1 class="logo me-auto"><a>Care Point</a></h1>

            <nav id="navbar" class="navbar order-last order-lg-0">
                <ul>
                    <li><a class="nav-link scrollto" href="/userHome">Home</a></li>
                    <li><a class="nav-link scrollto" href="/doctorOnDemand">Doctor-On-Demand</a></li>
                    <li><a class="nav-link scrollto" href="/clinicAppointment">Schedule Appointment</a></li>
                    <li><a class="nav-link scrollto   active" href="/myAppointments">My Appointments</a></li>
          

                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav>



        </div>
    </header>
    <section id="hero" class="d-flex align-items-center" style="padding-top: 0px">
        <div class="container">
            <h1>Hi <%= userName %> .<br> Welcome to Care Point</h1>
            <h2>Healing lives, with care and compassion.</h2>

        </div>
    </section>


    <main id="main">

        <!-- ======= Why Us Section ======= -->
        <section id="why-us" class="why-us">
            <div class="container">




                <div class="icon-boxes d-flex flex-column boxshadow ">


                    <div class="icon-box mt-4 mt-xl-0">


                        <h3>My Appointments</h3>

                        <%if(doctors[0]){ %>
                            <div class="formContent">
                                <div class="row">
                                    <% doctors.forEach(element=> { %>
                                        <div class="col-lg-4 col-md-6 col-sm-12">
                                            <div class="card">
                                                <div class="card-body">

                                                    <div class="container">
                                                        <p>
                                                            <%= element.doctorName %>
                                                        </p>
                                                        <p>
                                                            <%= element.status %>
                                                        </p>
                                                        <p>
                                                            <%= element.date %>
                                                        </p>
                                                        <p>
                                                            <%= element.slot %>
                                                        </p>
                                                        <p>
                                                            <%= element.type %>
                                                        </p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <% }); %>
                                </div>
                            </div>
                    </div>
                </div>
            </div>
        </section>

        <% } else{%>

            <div class="alert alert-danger" role="alert">You have no appointments</div>
            <% } %>


                <!-- Vendor JS Files -->
                <script src="assets/vendor/purecounter/purecounter_vanilla.js"></script>
                <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
                <script src="assets/vendor/glightbox/js/glightbox.min.js"></script>
                <script src="assets/vendor/swiper/swiper-bundle.min.js"></script>
                <script src="assets/vendor/php-email-form/validate.js"></script>

                <!-- JS File -->
                <script src="assets/js/main.js"></script>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N"
        crossorigin="anonymous"></script>
</body>

</html>