  <link rel="stylesheet" href="userMainPages.css">
  <title>User Main Page</title>
</head>

<body>
  <nav class="navbar navbar-expand-lg sticky-top" style="background-color:  #f2f2f2;">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">
        <img src="" alt="">
        Website Name and logo</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item px-5">
            <a class="nav-link active" aria-current="page" href="">Home</a>
          </li>
          <li class="nav-item px-5">
            <a class="nav-link" href="">Doctor-On-Demand</a>
          </li>
          <li class="nav-item px-5">
            <a class="nav-link" href="">Schedule Appointments</a>
          </li>
          <li class="nav-item px-5">
            <a class="nav-link" href="/myAppointments">My Appointments</a>
          </li>

        </ul>
      </div>
    </div>
  </nav>
  <div class="content">
    <div class="text">
      <h1>Hi <%= userName %>
      </h1>
    </div>
    <div class="image"> <img src="doctor.avif" alt="">
    </div>

  </div>
  <div class="section">
    <h3>Doctor On Demand</h3>
    <div class="form">
      <form action="/doctorSearch" method="post">
        <div class="formContent">
          Please fill out the form below to search for physicians and schedule appointments to have them visit
          your residence.
        </div>
        <div class="formContent">
          Choose your area :
          <select name="area" id="">
            <option value="Kengeri">Kengeri</option>
            <option value="Hebbala">Hebbala</option>
            <option value="Krishnarajapuram">Krishnarajapuram</option>
            <option value="Anekal">Anekal</option>
            <option value="Yelahanka">Yelahanka</option>
          </select>
        </div>

        <div class="formContent">
          Choose specialization of the doctor :
          <select name="specialization" id="">
            <option value="Neurology">Neurology</option>
            <option value="Orthopedics">Orthopedics</option>
            <option value="ENT">ENT</option>
            <option value="Urology">Urology</option>
            <option value="Opthalmology">Opthalmology</option>
            <option value="Pediatrics">Pediatrics</option>
            <option value="Dermatolgy">Dermatolgy</option>
            <option value="Psychiatry">Psychiatry</option>
            <option value="Dentistry">Dentistry</option>
            <option value="Nephrology">Nephrology</option>
            <option value="General Surgery">General Surgery</option>
            <option value="General Physician">General Physician</option>
            <option value="Ayurveda">Ayurveda</option>
            <option value="Nutritionist">Nutritionist</option>
            <option value="Psychology">Psychology</option>
            <option value="Cardiology">Cardiology</option>
            <option value="Gynaecology">Gynaecology</option>
          </select>
        </div>

        <div class="button">
          <button type="submit" class="btn btn-success">Search Doctors</button>
        </div>
      </form>
      <% if(doctorData){ %>

        <div class="formContent">
          <div class="row">
            <% doctorData.forEach(element=> {%>

              <% let g=element.gender.charAt(0).toUpperCase() + element.gender.slice(1);%>
                <div class="col-lg-4 col-md-6 col-sm-12">
                  <div class="card">
                    <div class="card-body">

                      <div class="container">

                        <form action="/scheduleAppointment" method="post">
                          <div class="row">
                            <div class="col-4">
                              Name
                            </div>
                            <div class="col-8">
                              : Dr.<%= element.name%>
                            </div>

                          </div>
                          <div class="row">
                            <div class="col-4">
                              Age
                            </div>
                            <div class="col-8">
                              : <%= element.age%>
                            </div>

                          </div>
                          <div class="row">
                            <div class="col-4">
                              Gender
                            </div>
                            <div class="col-8">
                              : <%= g%>
                            </div>

                          </div>
                          <div class="row">
                            <div class="col-4">
                              Experience
                            </div>
                            <div class="col-8">
                              : <%= element.experience%>
                            </div>

                          </div>
                          <div class="row">
                            <div class="col-4">
                              Area
                            </div>
                            <div class="col-8">
                              : <%= element.area%>
                            </div>

                          </div>
                          <div class="row">
                            <div class="col-4">
                              Specialization
                            </div>
                            <div class="col-8">
                              : <%= element.specialization%>
                            </div>

                          </div>
                          <div class="row">
                            <div class="col-4">
                              Address
                            </div>
                            <div class="col-8">
                              : <%= element.address%>
                            </div>

                          </div>
                      </div>



                      <% if(element.schedule[0]){ %>
                        <table class="table">
                          <thead>
                            <tr>
                              <th scope="col">Date</th>
                              <th scope="col">Slot 1</th>
                              <th scope="col">Slot 2</th>
                              <th scope="col">slot 3</th>
                            </tr>
                          </thead>
                          <tbody>


                            <% element.schedule.forEach(ele=> { %>

                              <tr>
                                <th scope="row">
                                  <%= ele.date %>
                                </th>
                                <% let Slot1 =ele.date + "slot1" + ele._id %>
                                <% let Slot2 =ele.date + "slot2" + ele._id %>
                                <% let Slot3 = ele.date + "slot3" + ele._id  %>
                                <% if(ele.slot1==="Free" ){ %>
                                  <td>
                                    <%= ele.slot1 %>
                                      <input type="checkbox" name="slot" value = <%= Slot1 %> id="">
                                  </td>
                                  <% }else{ %>

                                    <td>
                                      <%= ele.slot1 %>
                                    </td>
                                    <% } %>


                                <% if(ele.slot2==="Free" ){ %>
                                  <td>
                                    <%= ele.slot2 %>
                                      <input type="checkbox" name="slot" value = <%= Slot2 %> id="">
                                  </td>
                                  <% }else{ %>

                                    <td>
                                      <%= ele.slot2 %>
                                    </td>
                                    <% } %>

                                <% if(ele.slot3==="Free" ){ %>
                                  <td>
                                    <%= ele.slot3 %>
                                      <input type="checkbox" name="slot" value = <%= Slot1 %> id="">
                                  </td>
                                  <% }else{ %>

                                    <td>
                                      <%= ele.slot3 %>
                                    </td>
                                    <% } %>

                              </tr>
                              <% }); %>
                          </tbody>
                        </table>
                        <% }else{ %>
                          <div class="alert alert-danger" role="alert">The doctor has not updated his/her schedule</div>
                          <% } %>








                            <input type="hidden" id="custId" name="doctorName" value="<%= element.name %>">

                            <button type="submit" class="btn btn-success">Schedule Appointment</a>
                              </form>
                    </div>
                  </div>
                </div>
                <% }) %>

          </div>
        </div>

        <% } %>

    </div>
  </div>
  <div class="section">
    <h3>Schedule An Appointment</h3>
    <div class="form">
      <form action="/doctorSearch" method="post">
        <div class="formContent">
          Choose your area :
          <select name="area" id="">
            <option value="Kengeri">Kengeri</option>
            <option value="Hebbala">Hebbala</option>
            <option value="Krishnarajapura">Krishnarajapura</option>
            <option value="Anekal">Anekal</option>
            <option value="Yelahanka">Yelahanka</option>
          </select>
        </div>

        <div class="formContent">
          Choose specialization of the doctor :
          <select name="specialization" id="">
            <option value="Neurology">Neurology</option>
            <option value="Orthopedics">Orthopedics</option>
            <option value="ENT">ENT</option>
            <option value="Urology">Urology</option>
            <option value="Opthalmology">Opthalmology</option>
            <option value="Pediatrics">Pediatrics</option>
            <option value="Dermatolgy">Dermatolgy</option>
            <option value="Psychiatry">Psychiatry</option>
            <option value="Dentistry">Dentistry</option>
            <option value="Nephrology">Nephrology</option>
            <option value="General Surgery">General Surgery</option>
            <option value="General Physician">General Physician</option>
            <option value="Ayurveda">Ayurveda</option>
            <option value="Nutritionist">Nutritionist</option>
            <option value="Psychology">Psychology</option>
            <option value="Cardiology">Cardiology</option>
            <option value="Gynaecology">Gynaecology</option>
          </select>'
        </div>
        <div class="button">
          <button type="submit" class="btn btn-success">Search Doctors</button>
        </div>
      </form>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N"
    crossorigin="anonymous"></script>
</body>

</html>